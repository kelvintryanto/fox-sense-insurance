<%- include("./../partial/_header.ejs") %> <%- include("./../partial/_sidebar.ejs") %>

<div style="margin-left: 250px">
  <%- include("./../partial/_navbar.ejs") %>
  <div class="container m-2">
    <div class="d-flex justify-content-between align-items-center">
      <h1><%= data.title %></h1>
      <a href="/profile/update" class="btn btn-primary me-3">Edit Profile</a>
    </div>
    <div class="d-flex justify-content-center">
      <div class="card col-4 p-2">
        <table>
          <tr>
            <td class="text-end pe-2">FullName</td>
            <td class="<%= user.user.Profile.fullName ? "text-success" : "text-secondary" %>"><%= user.user.Profile.fullName ?? "Edit your Profile" %></td>
          </tr>
          <tr>
            <td class="text-end pe-2">Birth Place</td>
            <td class="<%= user.user.Profile.fullName ? "text-success" : "text-secondary"%>"><%= user.user.Profile.birthPlace ?? "Edit your Profile" %></td>
          </tr>
          <tr>
            <td class="text-end pe-2">Birth Date</td>
            <td class="<%= user.user.Profile.fullName ? "text-success" : "text-secondary"%>"><%= user.user.Profile.birthdate ?? "Edit your Profile" %></td>
          </tr>
          <tr>
            <td class="text-end pe-2">Gender</td>
            <td class="<%= user.user.Profile.fullName ? "text-success" : "text-secondary"%>"><%= user.user.Profile.gender ?? "Edit your Profile" %></td>
          </tr>
          <tr>
            <td class="text-end pe-2">Phone Number</td>
            <td class="<%= user.user.Profile.fullName ? "text-success" : "text-secondary"%>"><%= user.user.Profile.phoneNumber ?? "Edit your Profile" %></td>
          </tr>
        </table>
      </div>
    </div>
  </div>
</div>

<%- include("./../partial/_footer.ejs") %>
